@model EnergyProject.Models.User

@{
    ViewData["Title"] = "Edit profile";
}

<link rel="stylesheet" href="~/css/user.css" />

<section class="page">
    <div class="page-header">
        <div>
            <h1 class="h1">Edit profile</h1>
            <p class="lead">
                Change your email, name or phone number. Other fields are managed by the system.
            </p>
        </div>
        <div class="page-header-actions">
            <a class="user-btn user-btn-ghost"
               asp-area="Client"
               asp-controller="Home"
               asp-action="Profile">
                Back to profile
            </a>
        </div>
    </div>

    <div class="card mt-24">
        <form asp-area="Client"
              asp-controller="User"
              asp-action="UpdatePost"
              method="post"
              class="form-grid">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PasswordHash" />
            <input type="hidden" asp-for="Role" />

            <div class="form-row">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-row">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-input" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-row">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-input" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="user-btn user-btn-primary">
                    Save changes
                </button>
                <a class="user-btn user-btn-ghost"
                   asp-area="Client"
                   asp-controller="Home"
                   asp-action="Profile">
                    Cancel
                </a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</section>
