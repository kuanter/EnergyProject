@using System.Linq
@model IEnumerable<EnergyProject.Models.PaymentAccount>
@* Якщо тип/неймспейс інший – заміни цей рядок *@

<link rel="stylesheet" href="~/css/user.css" />

<section class="page">
    <div class="page-header">
        <div>
            <h1 class="h1">Payment accounts</h1>
            <p class="lead">
                List of all payment accounts linked to your profile.
            </p>
        </div>
        <div class="page-header-actions">
            <a class="user-btn user-btn-primary"
               asp-area="User"
               asp-controller="PaymentAccount"
               asp-action="Create">
                Create payment account
            </a>
        </div>
    </div>

    <div class="card mt-24">
        <div class="table-wrapper">
            <table class="user-table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>User Id</th>
                        <th>Address Id</th>
                        <th>Tariff Id</th>
                        <th>Meter Id</th>
                        <th>Power status Id</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr class="empty-row">
                            <td colspan="6">There are no payment accounts yet.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var pa in Model)
                        {
                            <tr>
                                <td data-label="Id">@pa.Id</td>
                                <td data-label="User Id">@pa.UserId</td>
                                <td data-label="Address Id">@pa.AddressId</td>
                                <td data-label="Tariff Id">@pa.TariffId</td>
                                <td data-label="Meter Id">@pa.MeterId</td>
                                <td data-label="Power status Id">@pa.PowerStatusId</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
