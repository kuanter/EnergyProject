@model EnergyProject.ViewModels.PaymentAccountCreateViewModel


@{
    ViewData["Title"] = "Create payment account";
}

<link rel="stylesheet" href="~/css/user.css" />

<section class="page">
    <div class="page-header">
        <div>
            <h1 class="h1">Create payment account</h1>
            <p class="lead">
                Fill in the basic information. You can change details later in the list of accounts.
            </p>
        </div>
        <div class="page-header-actions">
            <a class="user-btn user-btn-ghost"
               asp-area="User"
               asp-controller="PaymentAccount"
               asp-action="Show">
                Back to list
            </a>
        </div>
    </div>
    <form asp-area="User"
          asp-controller="PaymentAccount"
          asp-action="CreatePost"
          method="post"
          enctype="multipart/form-data"
          class="form-grid">
        <div class="card mt-24">
        
                <div class="form-row">
                    <p>
                        <label asp-for="AddressId" class="form-label">Address</label><br />
                        <select asp-for="AddressId" asp-items="Model.AddressOptions" class="form-control")">
                            <option value="">-- Choose address --</option>
                        </select>
                        <span asp-validation-for="AddressId" class="text-danger"></span>
                    </p>
                    <p>
                        <label asp-for="TariffId" class="form-label">Tariff</label><br />
                        <select asp-for="TariffId" asp-items="Model.TariffOptions" class="form-control" )">
                            <option value="">-- Choose Tariff --</option>
                        </select>
                        <span asp-validation-for="TariffId" class="text-danger"></span>
                    </p>
                    <!--<label asp-for="UserId" class="form-label"></label>
                    <input asp-for="UserId" class="form-input" />
                    <span asp-validation-for="UserId" class="text-danger"></span>-->
                </div>
            

                <div class="form-actions">
                    <button type="submit" class="user-btn user-btn-primary">
                        Save 
                    </button>
                </div>
       
        </div>
    </form>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</section>
