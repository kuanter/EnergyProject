@{
    ViewData["Title"] = "UserCards";
}
<link rel="stylesheet" href="~/css/user.css" /> 

<section class="page">
    <h1 class="h1">Cards</h1>

    <div class="grid grid-2 mt-12">
        <div class="card">
            <div class="h2">Saved cards</div>
            <table class="table">
                <thead>
                <tr><th>Label</th><th>Number</th><th>Default</th><th></th></tr>
                </thead>
                <tbody>
                <tr><td>Main</td><td>•••• 1234</td><td>Yes</td><td><a class="btn-ghost" href="#">Make default</a></td></tr>
                <tr><td>Backup</td><td>•••• 5678</td><td>No</td><td><a class="btn-ghost" href="#">Make default</a></td></tr>
                </tbody>
            </table>
        </div>

        <div class="card">
            <div class="h2">Add a new card</div>
            <div class="form-row">
                <label><span>Label</span><input class="input" placeholder="e.g., Main" /></label>
                <label><span>Number</span><input class="input" placeholder="0000 0000 0000 0000" /></label>
            </div>
            <div class="form-row">
                <label><span>Month</span><input class="input" placeholder="MM" /></label>
                <label><span>Year</span><input class="input" placeholder="YYYY" /></label>
            </div>
            <label class="mt-12"><input type="checkbox" /> Set as default</label>
            <div class="mt-12"><button class="btn" type="button">Save</button></div>
        </div>
    </div>
</section>