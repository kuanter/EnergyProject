@{
    ViewData["Title"] = "UserSupport";
}
<link rel="stylesheet" href="~/css/user.css" />

<section class="page">
    <h1 class="h1">Support</h1>

    <div class="card mt-12">
        <div class="h2">Submit a request</div>
        <label>
            <span>Subject</span>
            <input class="input" placeholder="Brief summary" />
        </label>
        <label class="mt-12">
            <span>Message</span>
            <textarea class="textarea" rows="6" placeholder="Describe your issue..."></textarea>
        </label>
        <div class="mt-12"><button class="btn" type="button">Send</button></div>
    </div>
</section>